@model LR1.Models.UploadModel

@{
    ViewData["Title"] = "Upload";
}

<div>

    <!-- Page Title -->
    <div class="page-title" data-aos="fade">
        <div class="heading">
            <div class="container">
                <div class="row d-flex justify-content-center text-center">
                    <div class="col-lg-8">
                        <h1>Upload File</h1>
                    </div>
                </div>
            </div>
        </div>
        <nav class="breadcrumbs">
            <div class="container">
                <ol>
                    <li><a href="Index">Home</a></li>
                    <li class="current">Upload File</li>
                </ol>
            </div>
        </nav>
    </div><!-- End Page Title -->
    <section id="Upload File" class="Upload File">

        <div class="container" data-aos="fade-up">

<div class="container" data-aos="fade-up" data-aos-delay="100">
    <div class="col-lg-6 offset-lg-3">
        <form asp-action="Upload" method="post" enctype="multipart/form-data" class="row justify-content-center">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3 row">
                <label for="file" class="col-sm-4 col-form-label">Choose a file:</label>
                <div class="col-sm-8">
                    <input type="file" class="form-control" name="uploadedFile" id="file" />
                </div>
            </div>

            <div class="col-auto">
                            <input type="submit" value="Upload" class="btn btn-red" />
            </div>


        </form>
    </div>
</div>



<center>
                <a asp-action="ViewFiles" class="btn btn-red mt-3">Back to List</a>
</center>


@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}

    </section><!-- /Portfolio Details Section -->
</div>>